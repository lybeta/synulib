<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="vertical"
    android:paddingLeft="10dip"  >

    <TextView
        android:id="@+id/tv_list_item_hotbooksone_name"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textSize="20dip" 
        android:text="这是一本书的书名这是一本书的书名这是一本书的书名这是一本书的书名这是一本书的书名">
        
    </TextView>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="4dp"/>

    <LinearLayout
        android:layout_height="14dp"
        android:layout_width="fill_parent"
        android:weightSum="3">

        <TextView
            android:id="@+id/tv_list_item_hotbooksone_number"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="索书号：A41/2"
            android:textSize="11dip" />

        <TextView 
            android:id="@+id/tv_list_item_hotbooksone_holding"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textSize="11dip"
            android:text="馆藏：43"/>


        <TextView
            android:id="@+id/tv_list_item_hotbooksone_rate"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="借阅比：0.26"
            android:textSize="11dip" />
        <TextView
            android:id="@+id/tv_list_item_hotbooksone_url"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0"/>
        
    </LinearLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="2dp"/>

</LinearLayout>