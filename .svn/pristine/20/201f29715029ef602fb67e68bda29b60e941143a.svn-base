<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:paddingLeft="10dip" 
    android:paddingRight="10dip" 
    >

   <LinearLayout
        android:layout_height="188dp"
        android:layout_width="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="4dp" />
        
        <TextView
            android:id="@+id/tv_bookdetail_name"
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:textSize="36dip" >
        </TextView>

        <TextView
            android:id="@+id/tv_bookdetail_writer"
            android:layout_width="fill_parent"
            android:layout_height="26dp"
            android:textSize="22dip" >
        </TextView>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="4dp" />


        <TextView
            android:id="@+id/tv_bookdetail_publisher"
            android:layout_height="28dp"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:textSize="22dip" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="4dp" />


         <TextView
             android:id="@+id/tv_bookdetail_isbn"
             android:layout_width="fill_parent"
             android:layout_height="28dp"
             android:layout_weight="1"
             android:textSize="22dip" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="4dp" />
    </LinearLayout>
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_bookdetail_order"
            android:layout_width="0px"
            android:layout_height="wrap_content" 
            android:layout_weight="1"
            android:text="预约"/>
        <Button
            android:id="@+id/btn_bookdetail_collect"
            android:layout_width="0dp"
            android:layout_height="wrap_content" 
             android:layout_weight="1"
             android:text="收藏"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/lv_bookdetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        </ListView>
    </LinearLayout>

    

</LinearLayout>