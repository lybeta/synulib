<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:baselineAligned="false"
    android:layout_width="fill_parent"
    android:layout_height="84dp"
    android:orientation="horizontal"
    android:paddingLeft="10dip" 
    android:weightSum="10">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_weight="10"
        android:layout_height="96dp"
        android:layout_width="0px"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="2dp" />
        <TextView
            android:id="@+id/tv_list_item_shelf_detail_name"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="空间设计随想:第五街装饰空间设计出品"
            android:textSize="20dip" >
        </TextView>

         <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="14dp" 
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_list_item_shelf_detail_writer"
                android:layout_height="fill_parent"
                android:layout_width="0px"
                android:layout_weight="1"
                android:text="路遥"
                android:textSize="11dip" />

            <TextView
                android:id="@+id/tv_list_item_shelf_detail_publisher"
                android:layout_height="fill_parent"
                android:layout_width="0px"
                android:layout_weight="1"
                android:text="人民文学出版社"
                android:textSize="11dip" />
        </LinearLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="2dp" />
		<LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="14dp" 
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_list_item_shelf_detail_date"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="出版日期：2012"
                android:textSize="11dip" />

            <TextView
                android:id="@+id/tv_list_item_shelf_detail_number"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="索书号：I247.5/1012/C/1"
                android:textSize="11dip" />
            <TextView
                android:id="@+id/tv_list_item_shelf_detail_url"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="0"
                android:textSize="11dip" />
        </LinearLayout>
       

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="2dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_list_item_ownlib_borrow_url"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0"/>

</LinearLayout>
