<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:weightSum="2">
    <TextView 
        android:id="@+id/tv_list_item_order_number"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="14dip" 
        android:text="TP312JA/125/A"/>
    <TextView 
        android:id="@+id/tv_list_item_order_place"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="14dip" 
        android:text="图书借阅二室"/>
    <TextView 
        android:id="@+id/tv_list_item_order_marcno"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="0"
        android:gravity="center"
        android:textSize="14dip" />
    <TextView 
        android:id="@+id/tv_list_item_order_location"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="0"
        android:gravity="center"
        android:textSize="14dip" />
    <TextView 
        android:id="@+id/tv_list_item_order_red"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="0"
        android:gravity="center"
        android:textSize="14dip" />


</LinearLayout>
